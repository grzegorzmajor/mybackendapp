pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout scm
                }
            }
        }
    }
    post {
        always {
            // Tu dodaj kroki, które mają być wykonane zawsze, niezależnie od rezultatu
        }
        success {
            // Tu dodaj kroki, które mają być wykonane tylko w przypadku sukcesu
        }
        failure {
            // Tu dodaj kroki, które mają być wykonane tylko w przypadku niepowodzenia
        }
    }
}